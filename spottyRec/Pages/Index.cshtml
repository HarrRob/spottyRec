@page
@model IndexModel
@{
    ViewData["Title"] = "SpottyRec - Log In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SpottyRec - Log In</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
        }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .spotify-btn {
            background-color: #1DB954;
            border: none;
            color: white;
            padding: 15px 32px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

            .spotify-btn:hover {
                background-color: #17a34a;
            }
    </style>
</head>
<body>

    <h1>Welcome to SpottyRec</h1>

    <div class="button-container">
        <form method="post">
            <button class="spotify-btn" asp-page-handler="Login">Log In</button>
        </form>
    </div>

</body>
</html>
